<tr>
  <td><%= category.parent_id %></td>
  <td><%= category.title %></td>
  <td><%= category.content %></td>
  <td class= "text-center">
    <%= link_to edit_admin_category_path(category.id), class: "btn btn-info" do %>
      <i class="zmdi zmdi-edit">
      </i>
    <% end %>
  </td>
  <td class= "text-center">
    <%= link_to admin_category_path(category.id), method: :delete, data: {confirm: t("category.confirm_delete")}, class: "btn btn-danger" do %>
      <i class="zmdi zmdi-eye-off"></i>
    <% end %>
  </td>
</tr>
