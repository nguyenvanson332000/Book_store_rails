<%= form_for [:admin, @category] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="card">
    <div class="card-body">
      <div class="mb-5">
        <%= f.label :parent_id, t("category.parent_id") %>
        <%= f.label :parent_id, "<span>*</span>".html_safe %>
        <%= f.text_field :parent_id, { class: "form-control", placeholder: "" } %>
      </div>
      <div class="mb-5">
        <%= f.label :title, t("category.title") %>
        <%= f.label :title, "<span>*</span>".html_safe %>
        <%= f.text_field :title, { class: "form-control", placeholder: "" } %>
      </div>
      <div class="mb-5">
        <%= f.label :content, t("category.content") %>
        <%= f.label :content, "<span>*</span>".html_safe %>
        <%= f.text_field :content, { class: "form-control", placeholder: "" } %>
      </div>
      <div class="mb-3">
        <%= f.submit yield(:button_text), class: "btn btn-primary submit" %>
        <%= link_to t("crud.back"), { controller: 'categories', action: 'index'},
          class: "btn btn-success backBtn" %>
      </div>
    </div>
  </div>
<% end %>
