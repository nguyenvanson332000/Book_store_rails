<table class="table line-height-1-5 table-tlshop">
  <thead >
    <tr>
      <th><%= t "orders.ordinal_number" %></th>
      <th><%= t "product.name" %></th>
      <th><%= t "product.quantity" %></th>
      <th><%= t "orders.total_money" %></th>
    </tr>
  </thead>
  <tbody>
    <% order_details.each_with_index  do |detail, i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= detail.product_name  %></td>
        <td><%= detail.quantity %></td>
        <td><%= number_to_currency(detail.product_price*detail.quantity, precision: 0, locale: :vi) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
