<% provide :title, t("title.edit_user") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class= "panel panel-default">
      <div class= "panel-heading">
        <h1 class= "center"><%= t "users.edit.h1_html" %></h1>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label t "users.form.email" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label t "users.form.name" %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label t "users.form.id_card" %><br />
            <%= f.text_field :id_card, autofocus: true, class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label t "users.form.phone_number" %><br />
            <%= f.text_field :phone_number, autofocus: true, class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label t "users.form.address" %><br />
            <%= f.text_field :address, autofocus: true, class: "form-control" %>
          </div>
          <%unless current_user.provider.present? %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class= "form-control"><%= "#{t("users.edit.waiting_confirmation")} #{resource.unconfirmed_email}" %></div>
            <% end %>
            <div class="field">
              <%= f.label t"users.form.password" %><br/>
              <i> <%= t "users.edit.note_password" %></i><br/>
              <% if @minimum_password_length %>
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length} #{t("users.edit.note_password3")}" , class: "form-control" %>
              <% end %>
            </div>
            <div class="field">
              <%= f.label t "users.form.password_confirmation" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label t "users.form.current_password" %><br/>
              <i><%= t "users.edit.note_password2" %></i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit t("users.edit.btn_save"), class: "btn btn-primary button_custom" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
