<div class="row">
  <div class="col-md-3">
    <div>
      <a href="#" class="list-group-item active">
        <%= t "home.category" %>
      </a>
      <ul class="list-group">
        <%= render partial: "category", collection: @categories %>
      </ul>
    </div>
    <div>
      <a href="#" class="list-group-item active list-group-item-success">
        <%= t "home.publisher" %>
      </a>
      <ul class="list-group">
        <%= render partial: "publisher", collection: @publishers %>
      </ul>
    </div>
    <div>
      <ul class="list-group list-status-product">
        <li>
          <%= search_form_for @search, url: root_url , class: "form-inline" do |f| %>
            <div class="form-group form-search-client">
              <%= f.hidden_field :status_eq, :value => "Trend" %>
              <%= f.submit t("product.product_trend"), class: "btn list-group-item list-group-item-success" %>
            </div>
          <% end %>
        </li>
        <li>
          <%= search_form_for @search, url: root_url , class: "form-inline" do |f| %>
            <div class="form-group form-search-client">
              <%= f.hidden_field :status_eq, :value => "Hot" %>
              <%= f.submit t("product.product_hot"), class: "btn list-group-item list-group-item-success" %>
            </div>
          <% end %>
        </li>
        <li>
          <%= search_form_for @search, url: root_url , class: "form-inline" do |f| %>
            <div class="form-group form-search-client">
              <%= f.hidden_field :status_eq, :value => "New" %>
              <%= f.submit t("product.product_new"), class: "btn list-group-item list-group-item-warning" %>
            </div>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  <div class="col-md-9">
    <div>
      <ol class="breadcrumb">
        <li><%= t "header.home" %></li>
      </ol>
    </div>
    <div class="row">
      <div class="btn-group alg-right-pad">
        <div class="btn btn-group btn-danger">
          <div class = "btn-sort-price">
            <%= sort_link @search, :price, t("product.product_price"), @search.result.ordered_by_price %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <%= render "static_pages/product" %>
    </div>
  </div>
</div>
